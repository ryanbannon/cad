<% if params[:controller] == 'home' %>
    <div class="jumbotron">
      <div class="container" style="text-align: center">
        <% if user_signed_in? %>
        <h3>Name: <b><%= current_user.name %></b></h3>
        <h3>Email: <b><%= current_user.email %></b></h3>
        <h3>Clinic: <b><%= current_user.clinic %></b></h3>
        <% else %>
        <%= link_to "Sign in", new_user_session_path %> or <%= link_to "Sign up", new_user_registration_path %>
        <% end %>
        <br /><%= link_to "Edit My Profile", edit_user_registration_path, class:"btn btn-primary btn-lg" %>
      </div>
    </div>
<% end %>